<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_toilet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.palmdigital.chooseadventure_v01.Toilet">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        tools:context="com.example.palmdigital.chooseadventure_v01.WakeUp"
        android:background="@android:color/darker_gray"
        android:weightSum="1">

        <TextView
            android:text="ChooseAdventure_v01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_title"
            android:textSize="23sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="17dp" />

        <TextView
            android:text="Story"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_story"
            android:textSize="25sp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="104dp">

            <Button
                android:text="Yes"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/Yes"
                android:layout_weight="1" />

            <Button
                android:text="HeckYes"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/HeckYes"
                android:layout_weight="1" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
